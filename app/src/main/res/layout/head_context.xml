<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/activity_context_icon"
        android:layout_width="@dimen/dp_43"
        android:layout_height="@dimen/dp_43"
        android:layout_below="@+id/activity_context_re"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_11"
        android:src="@drawable/my_icon" />

    <TextView
        android:id="@+id/activity_context_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/activity_context_icon"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_toRightOf="@id/activity_context_icon"
        android:text=""
        android:textColor="#333"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:id="@+id/activity_context_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/activity_context_icon"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_toRightOf="@id/activity_context_icon"
        android:text="2019-11-26"
        android:textColor="#999999"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/activity_context_type"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_24"
        android:layout_below="@+id/activity_context_re"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_13"
        android:background="@drawable/tv_bg"
        android:gravity="center"
        android:paddingStart="@dimen/dp_11"
        android:paddingEnd="@dimen/dp_5"
        android:text="狗狗"
        android:textColor="#fff"
        android:textSize="@dimen/sp_12" />

    <View
        android:id="@+id/activity_context_view1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@id/activity_context_icon"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_16"
        android:background="#F4F4F4" />

    <TextView
        android:id="@+id/activity_context_context"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_context_view1"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_13"
        android:layout_marginRight="@dimen/dp_15"
        android:text=""
        android:textColor="#333333"
        android:textSize="@dimen/sp_14" />

    <RelativeLayout
        android:id="@+id/activity_context_lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_context_context"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_7"
        android:layout_marginRight="@dimen/dp_15">

        <com.google.android.exoplayer2.ui.PlayerView
            android:visibility="gone"
            android:id="@+id/video_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_400"
            android:layout_marginBottom="@dimen/dp_20" />

        <LinearLayout
            android:id="@+id/item_img_liner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/item_img1"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_80"
                android:layout_weight="1"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/item_img2"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_80"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_weight="1"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/item_img3"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_80"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_weight="1"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/item_img4"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_80"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_weight="1"
                android:scaleType="centerCrop" />
        </LinearLayout>

    </RelativeLayout>



    <View
        android:id="@+id/activity_context_view2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:layout_below="@id/activity_context_lin"
        android:layout_marginTop="@dimen/dp_20"
        android:background="#ededed" />

    <LinearLayout
        android:id="@+id/activity_context_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_below="@id/activity_context_view2"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_22"
            android:layout_marginLeft="@dimen/dp_16"
            android:src="@drawable/phone" />

        <TextView
            android:id="@+id/activity_context_tv_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_21"
            android:text="手机号码"
            android:textColor="#333333"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <View
        android:id="@+id/activity_context_view3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@id/activity_context_1"
        android:layout_marginLeft="@dimen/dp_15"
        android:background="#F4F4F4" />

    <LinearLayout
        android:id="@+id/activity_context_2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_below="@id/activity_context_view3"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_22"
            android:layout_marginLeft="@dimen/dp_16"
            android:src="@drawable/qq" />

        <TextView
            android:id="@+id/activity_context_tv_qq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_21"
            android:text="QQ号"
            android:textColor="#333333"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <View
        android:id="@+id/activity_context_view4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@id/activity_context_2"
        android:layout_marginLeft="@dimen/dp_15"
        android:background="#F4F4F4" />

    <LinearLayout
        android:id="@+id/activity_context_3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_below="@id/activity_context_view4"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_22"
            android:layout_marginLeft="@dimen/dp_16"
            android:src="@drawable/wechat" />

        <TextView
            android:id="@+id/activity_context_tv_wechat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_21"
            android:text="微信号"
            android:textColor="#333333"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <View
        android:id="@+id/activity_context_view5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@id/activity_context_3"
        android:layout_marginLeft="@dimen/dp_15"
        android:background="#F4F4F4" />

    <LinearLayout
        android:id="@+id/activity_context_4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_below="@id/activity_context_view5"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_22"
            android:layout_marginLeft="@dimen/dp_16"
            android:src="@drawable/addr" />

        <TextView
            android:id="@+id/activity_context_tv_addr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_21"
            android:text="浙江省杭州市江干区下沙街道"
            android:textColor="#333333"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <View
        android:id="@+id/activity_context_view6"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_20"
        android:layout_below="@id/activity_context_4"
        android:background="#F4F4F4" />

    <TextView
        android:id="@+id/activity_context_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_context_view6"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_7"
        android:paddingBottom="@dimen/dp_10"
        android:text="评论列表"
        android:textColor="#333"
        android:textSize="@dimen/sp_15" />


</RelativeLayout>