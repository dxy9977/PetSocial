<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context=".ui.MainShowActivity">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:background="#f2f2f2" />

    <com.lzy.widget.AlphaIndicator
        android:id="@+id/alphaIndicator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55"
        android:orientation="horizontal">

        <com.lzy.widget.AlphaView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="@dimen/dp_5"
            app:av_tabIconNormal="@drawable/first2"
            app:av_tabIconSelected="@drawable/first1"
            app:av_tabText="首页"
            app:av_tabTextSize="@dimen/sp_14"
            app:av_textColorNormal="#bfbfbf"
            app:av_textColorSelected="#515151" />

        <com.lzy.widget.AlphaView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="@dimen/dp_5"
            app:av_tabIconNormal="@drawable/first3"
            app:av_tabIconSelected="@drawable/first4"
            app:av_tabText="好友"
            app:av_tabTextSize="@dimen/sp_14"
            app:av_textColorNormal="#bfbfbf"
            app:av_textColorSelected="#515151" />

        <com.lzy.widget.AlphaView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="@dimen/dp_5"
            app:av_tabText="发现"
            app:av_tabIconNormal="@drawable/first2"
            app:av_tabIconSelected="@drawable/first1"
            app:av_tabTextSize="@dimen/sp_14"
            app:av_textColorNormal="#bfbfbf"
            app:av_textColorSelected="#515151" />

        <com.lzy.widget.AlphaView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="@dimen/dp_5"
            app:av_tabIconNormal="@drawable/first5"
            app:av_tabIconSelected="@drawable/first6"
            app:av_tabText="我的"
            app:av_tabTextSize="@dimen/sp_14"
            app:av_textColorNormal="#bfbfbf"
            app:av_textColorSelected="#515151" />
    </com.lzy.widget.AlphaIndicator>


</LinearLayout>