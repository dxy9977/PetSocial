<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".ui.ReleaseActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/release_re"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_67"
            android:background="#ffffd946">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_33"
                android:text="发布页"
                android:textColor="#333"
                android:textSize="@dimen/sp_15" />

            <ImageView
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:layout_alignParentBottom="true"
                android:onClick="back"
                android:scaleType="centerInside"
                android:src="@drawable/back" />
        </RelativeLayout>


        <EditText
            android:id="@+id/activity_add_edit_context"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_143"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_78"
            android:layout_marginRight="@dimen/dp_9"
            android:background="@drawable/edit_bg"
            android:gravity="top"
            android:hint="输入您要发布的信息"
            android:padding="@dimen/dp_3" />

        <LinearLayout
            android:id="@+id/liner_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_80"
            android:layout_below="@id/activity_add_edit_context"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_10"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/liner_img1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/pic_add" />

            <ImageView
                android:id="@+id/liner_img2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_weight="1"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/liner_img3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_weight="1"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/liner_img4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_weight="1"
                android:scaleType="centerCrop" />
        </LinearLayout>


        <View
            android:id="@+id/activity_release_view1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10"
            android:layout_below="@id/liner_img"
            android:layout_marginTop="16dp"
            android:background="#fff6f6f6" />

        <LinearLayout
            android:id="@+id/activity_release_1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_below="@id/activity_release_view1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_24"
                android:gravity="center_vertical"
                android:text="所在地址"
                android:textColor="#333"
                android:textSize="@dimen/sp_16" />

            <EditText
                android:id="@+id/edit1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_10"
                android:textColor="#999999" />
        </LinearLayout>

        <View
            android:id="@+id/activity_release_view2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@id/activity_release_1"
            android:layout_marginLeft="@dimen/dp_24"
            android:background="#F4F4F4" />

        <LinearLayout
            android:id="@+id/activity_release_2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_below="@id/activity_release_view2"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_24"
                android:gravity="center_vertical"
                android:text="联系电话"
                android:textColor="#333"
                android:textSize="@dimen/sp_16" />

            <EditText
                android:id="@+id/edit2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_10"
                android:textColor="#999999" />
        </LinearLayout>

        <View
            android:id="@+id/activity_release_view3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@id/activity_release_2"
            android:layout_marginLeft="@dimen/dp_24"
            android:background="#F4F4F4" />

        <LinearLayout
            android:id="@+id/activity_release_3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_below="@id/activity_release_view3"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_24"
                android:gravity="center_vertical"
                android:text="QQ号码"
                android:textColor="#333"
                android:textSize="@dimen/sp_16" />

            <EditText
                android:id="@+id/edit3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_10"
                android:textColor="#999999" />
        </LinearLayout>

        <View
            android:id="@+id/activity_release_view4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@id/activity_release_3"
            android:layout_marginLeft="@dimen/dp_24"
            android:background="#F4F4F4" />

        <LinearLayout
            android:id="@+id/activity_release_4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_below="@id/activity_release_view4"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_24"
                android:gravity="center_vertical"
                android:text="微信号码"
                android:textColor="#333"
                android:textSize="@dimen/sp_16" />

            <EditText
                android:id="@+id/edit4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_10"
                android:textColor="#999999" />
        </LinearLayout>

        <View
            android:id="@+id/activity_release_view5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@id/activity_release_4"
            android:layout_marginLeft="@dimen/dp_24"
            android:background="#F4F4F4" />

        <LinearLayout
            android:id="@+id/activity_release_5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_below="@id/activity_release_view5"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_24"
                android:gravity="center_vertical"
                android:text="选择参数"
                android:textColor="#333"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/choose_type"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_10"
                android:text="选择参数"
                android:textColor="#999"
                android:textSize="@dimen/sp_16" />

        </LinearLayout>

        <View
            android:id="@+id/activity_release_view6"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@id/activity_release_5"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginTop="16dp"
            android:background="#F4F4F4" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activity_release_view6"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/dp_28"
            android:layout_marginTop="@dimen/dp_28"
            android:layout_marginRight="@dimen/dp_28"
            android:layout_marginBottom="@dimen/dp_28"
            android:background="@drawable/et_releasse"
            android:onClick="fabu"
            android:text="发布"
            android:textColor="#333"
            android:textSize="@dimen/sp_15" />
    </RelativeLayout>


</ScrollView>