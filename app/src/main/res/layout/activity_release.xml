<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ReleaseActivity"
    android:background="#fff">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/release_re"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_67"
            android:background="#ffffd946">
            <TextView
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_33"
                android:text="发布页"
                android:textSize="@dimen/sp_15"
                android:textColor="#333"/>
            <ImageView
                android:layout_width="@dimen/dp_8"
                android:layout_height="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_37"
                android:layout_marginLeft="@dimen/dp_15"
                android:src="@drawable/back"/>
        </RelativeLayout>
        <View
            android:id="@+id/activity_release_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_5"
            android:layout_below="@id/release_re"
            android:background="#ededed"/>
        <EditText
            android:id="@+id/activity_add_edit_context"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_143"
            android:layout_below="@id/activity_release_view"
            android:background="@drawable/edit_bg"
            android:hint="输入您要发布的信息"
            android:gravity="top"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_9"
            android:layout_marginTop="@dimen/dp_11"/>

        <ImageView
            android:id="@+id/activity_release_photo"
            android:layout_width="@dimen/dp_96"
            android:layout_height="@dimen/dp_96"
            android:src="@drawable/photo"
            android:background="#ededed"
            android:layout_below="@id/activity_add_edit_context"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="@dimen/dp_15"/>

        <ImageView
            android:id="@+id/activity_release_vedio"
            android:layout_width="@dimen/dp_96"
            android:layout_height="@dimen/dp_96"
            android:src="@drawable/vedio"
            android:layout_toRightOf="@id/activity_release_photo"
            android:background="#ededed"
            android:layout_below="@id/activity_add_edit_context"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="15dp"/>
        <View
            android:id="@+id/activity_release_view1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10"
            android:layout_below="@id/activity_release_photo"
            android:layout_marginTop="16dp"
            android:background="#fff6f6f6"/>
        <LinearLayout
            android:id="@+id/activity_release_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/activity_release_view1"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="所在地址"
                android:textColor="#333"
                android:textSize = "@dimen/sp_16"
                android:layout_marginLeft="@dimen/dp_24"/>
            <EditText
                android:id="@+id/activity_release_et_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:id="@+id/activity_release_view2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@id/activity_release_1"
            android:background="#F4F4F4"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginTop="16dp"/>

        <LinearLayout
            android:id="@+id/activity_release_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/activity_release_view2"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联系电话"
                android:textColor="#333"
                android:textSize = "@dimen/sp_16"
                android:layout_marginLeft="@dimen/dp_24"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:id="@+id/activity_release_view3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@id/activity_release_2"
            android:background="#F4F4F4"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginTop="16dp"/>

        <LinearLayout
            android:id="@+id/activity_release_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/activity_release_view3"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QQ号码"
                android:textColor="#333"
                android:textSize = "@dimen/sp_16"
                android:layout_marginLeft="@dimen/dp_24"/>
            <EditText
                android:id="@+id/activity_release_et_qq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:id="@+id/activity_release_view4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@id/activity_release_3"
            android:background="#F4F4F4"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginTop="16dp"/>

        <LinearLayout
            android:id="@+id/activity_release_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/activity_release_view4"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信号码"
                android:textColor="#333"
                android:textSize = "@dimen/sp_16"
                android:layout_marginLeft="@dimen/dp_24"/>
            <EditText
                android:id="@+id/activity_release_et_wechat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:id="@+id/activity_release_view5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@id/activity_release_4"
            android:background="#F4F4F4"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginTop="16dp"/>

        <LinearLayout
            android:id="@+id/activity_release_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/activity_release_view5"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择参数"
                android:textColor="#333"
                android:textSize = "@dimen/sp_16"
                android:layout_marginLeft="@dimen/dp_24"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_30"
                android:text="猫"
                android:layout_marginLeft="@dimen/dp_15"
                android:background="#F4F4F4"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_30"
                android:text="狗"
                android:background="#F4F4F4"
                android:layout_marginLeft="@dimen/dp_15"/>

        </LinearLayout>
        <View
            android:id="@+id/activity_release_view6"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@id/activity_release_5"
            android:background="#F4F4F4"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginTop="16dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/et_releasse"
            android:text="发布"
            android:textColor="#333"
            android:layout_below="@+id/activity_release_view6"
            android:layout_marginTop="@dimen/dp_28"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dp_28"
            android:layout_marginLeft="@dimen/dp_28"
            android:layout_marginRight="@dimen/dp_28"
            android:textSize="@dimen/sp_15"/>
    </RelativeLayout>




</ScrollView>