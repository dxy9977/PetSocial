<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ReleaseActivity">
    <RelativeLayout
        android:id="@+id/release_re"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60">
        <TextView
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发布页"
            android:textSize="@dimen/sp_22"
            android:textColor="#000"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/back"/>
    </RelativeLayout>
    <View
        android:id="@+id/activity_release_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_5"
        android:layout_below="@id/release_re"
        android:background="#ededed"/>
    <EditText
        android:id="@+id/activity_add_edit_context"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_120"
        android:layout_below="@id/activity_release_view"
        android:background="@drawable/edit_bg"
        android:hint="输入您要发布的信息"
        android:gravity="top"/>

    <ImageView
        android:id="@+id/activity_release_photo"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_80"
        android:src="@drawable/photo"
        android:background="#ededed"
        android:layout_below="@id/activity_add_edit_context"
        android:layout_margin="10dp"/>

    <ImageView
        android:id="@+id/activity_release_vedio"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_80"
        android:src="@drawable/vedio"
        android:layout_toRightOf="@id/activity_release_photo"
        android:background="#ededed"
        android:layout_below="@id/activity_add_edit_context"
        android:layout_margin="10dp"/>
    <View
        android:id="@+id/activity_release_view1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:layout_below="@id/activity_release_photo"
        android:background="#ededed"/>
    <LinearLayout
        android:id="@+id/activity_release_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/activity_release_view1"
        android:layout_margin="@dimen/dp_5">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="所在地址"
            android:textColor="#000"
            android:textSize="@dimen/sp_15"/>
        <EditText
            android:id="@+id/activity_release_et_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
        android:id="@+id/activity_release_view2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_3"
        android:layout_below="@id/activity_release_1"
        android:background="#ededed"/>

    <LinearLayout
        android:id="@+id/activity_release_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/activity_release_view2"
        android:layout_margin="@dimen/dp_5">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系电话"
            android:textColor="#000"
            android:textSize="@dimen/sp_15"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
        android:id="@+id/activity_release_view3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_3"
        android:layout_below="@id/activity_release_2"
        android:background="#ededed"/>

    <LinearLayout
        android:id="@+id/activity_release_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/activity_release_view3"
        android:layout_margin="@dimen/dp_5">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QQ号码"
            android:textColor="#000"
            android:textSize="@dimen/sp_15"/>
        <EditText
            android:id="@+id/activity_release_et_qq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
        android:id="@+id/activity_release_view4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_3"
        android:layout_below="@id/activity_release_3"
        android:background="#ededed"/>

    <LinearLayout
        android:id="@+id/activity_release_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/activity_release_view4"
        android:layout_margin="@dimen/dp_5">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微信号码"
            android:textColor="#000"
            android:textSize="@dimen/sp_15"/>
        <EditText
            android:id="@+id/activity_release_et_wechat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
        android:id="@+id/activity_release_view5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_3"
        android:layout_below="@id/activity_release_4"
        android:background="#ededed"/>

    <LinearLayout
        android:id="@+id/activity_release_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/activity_release_view5"
        android:layout_margin="@dimen/dp_5">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择参数"
            android:textColor="#000"
            android:textSize="@dimen/sp_15"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="猫"
            android:layout_marginLeft="@dimen/dp_15"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="狗"/>

    </LinearLayout>
    <View
        android:id="@+id/activity_release_view6"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_3"
        android:layout_below="@id/activity_release_5"
        android:background="#ededed"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_bg"
        android:text="发布"
        android:textColor="#000"
        android:layout_below="@+id/activity_release_view6"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_centerHorizontal="true"/>



</RelativeLayout>