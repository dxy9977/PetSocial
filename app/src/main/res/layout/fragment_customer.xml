<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff2f2f2"
    tools:context=".fragment.CustomerFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:id="@+id/activity_select_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_136"
        android:background="#ffffd946">

        <TextView
            android:id="@+id/fragment_my_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_33"
            android:gravity="center"
            android:text="我的"
            android:textColor="#333"
            android:textSize="@dimen/sp_16" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/fragment_my_re1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_159"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_68"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/et_re">

        <ImageView
            android:id="@+id/custom_icon"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_18"
            android:src="@drawable/my_icon" />

        <TextView
            android:id="@+id/custom_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/custom_icon"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@id/custom_icon"
            android:text="我的名字"
            android:textColor="#333"
            android:textSize="@dimen/sp_17" />

        <TextView
            android:id="@+id/custom_myaccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/custom_icon"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@id/custom_icon"
            android:text="账号"
            android:textColor="#333"
            android:textSize="@dimen/sp_14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/custom_icon"
            android:layout_marginLeft="@dimen/dp_11"
            android:layout_marginTop="@dimen/dp_24"
            android:layout_marginRight="@dimen/dp_11"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/custom_guangzhu"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_guangzhu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_2"
                    android:text="关注"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_13" />
            </LinearLayout>

            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="@dimen/dp_29"
                android:background="#DDDDDD" />

            <LinearLayout
                android:id="@+id/custom_beiguangzhu"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_beiguangzhu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_2"
                    android:text="被关注"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_13" />
            </LinearLayout>

            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="@dimen/dp_29"
                android:background="#DDDDDD" />

            <LinearLayout
                android:id="@+id/custom_dongtai"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_dongtai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_2"
                    android:text="动态"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_13" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/fragment_my_re2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_118"
        android:layout_below="@+id/fragment_my_re1"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/et_re">

        <View
            android:id="@+id/fragment_my_view"
            android:layout_width="@dimen/dp_3"
            android:layout_height="@dimen/dp_14"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_15"
            android:background="#ffffda44" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_7"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_toRightOf="@+id/fragment_my_view"
            android:text="我的服务"
            android:textColor="#333"
            android:textSize="@dimen/sp_14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragment_my_view"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/custom_home"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="@dimen/dp_15">

                <ImageView
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:src="@drawable/home" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:text="我的主页"
                    android:textColor="#333"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/custom_account"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="@dimen/dp_15">

                <ImageView
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:src="@drawable/set" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:text="账号管理"
                    android:textColor="#333"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/custom_set"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="@dimen/dp_15">

                <ImageView
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:src="@drawable/yinshi" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:text="隐私设置"
                    android:textColor="#333"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/custom_push"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="@dimen/dp_15">

                <ImageView
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:src="@drawable/tuiguang" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:text="名片推广"
                    android:textColor="#333"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

    <Button
        android:id="@+id/custom_exit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_34"
        android:layout_marginRight="@dimen/dp_34"
        android:layout_marginBottom="@dimen/dp_40"
        android:background="@drawable/et_releasse"
        android:text="退出"
        android:textColor="#333"
        android:textSize="@dimen/sp_15" />

</RelativeLayout>