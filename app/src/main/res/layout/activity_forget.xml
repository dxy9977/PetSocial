<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".login.ForgetActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="47dp">
        <ImageView
            android:layout_width="@dimen/dp_8"
            android:layout_height="@dimen/dp_14"
            android:src="@drawable/back"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:onClick="btnBack"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="找回密码"
            android:textColor="#333333"
            android:textSize="16sp"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginLeft="@dimen/dp_28"
        android:layout_marginRight="@dimen/dp_28"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请输入你注册的手机号"
            android:textColor="#B7B7B7"
            android:textSize="@dimen/sp_12"/>

        <EditText
            android:id="@+id/forget_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:background="@null"
            android:hint="请输入手机号"
            android:layout_marginTop="@dimen/dp_27"
            android:inputType="number"
            android:singleLine="true"
            android:textSize="@dimen/sp_15" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:background="#cccccc" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/forget_code"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入验证码"
                android:inputType="number"
                android:singleLine="true"
                android:textSize="@dimen/sp_15" />

            <TextView
                android:id="@+id/forget_code_btn"
                android:layout_width="@dimen/dp_91"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dp_5"
                android:background="@drawable/login_code_bg"
                android:gravity="center"
                android:clickable="true"
                android:onClick="getPhoneCode"
                android:text="获取验证码"
                android:textColor="#333333"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:background="#cccccc" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_marginTop="@dimen/dp_61"
            android:background="@drawable/login_btn_bg"
            android:onClick="btnForget"
            android:text="确定"
            android:textColor="#333333"
            android:textSize="@dimen/sp_15" />


    </LinearLayout>
</LinearLayout>