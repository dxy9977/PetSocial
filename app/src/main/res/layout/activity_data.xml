<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff6f6f6"
    tools:context=".ui.DataActivity">


    <RelativeLayout
        android:id="@+id/activity_data_re1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_163"
        android:background="#ffffd946">

        <ImageView
            android:layout_width="@dimen/dp_8"
            android:layout_height="@dimen/dp_14"
            android:src="@drawable/back"
            android:layout_marginTop="@dimen/dp_37"
            android:layout_marginLeft="@dimen/dp_15"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="个人主页"
            android:layout_marginTop="@dimen/dp_33"
            android:textSize="@dimen/sp_16"
            android:textColor="#333"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/activity_data_re2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_252"
        android:background="#fff"
        android:layout_marginTop="@dimen/dp_73"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_marginRight="@dimen/dp_14"
        >

        <ImageView
            android:id="@+id/activity_data_icon"
            android:layout_width="@dimen/dp_43"
            android:layout_height="@dimen/dp_43"
            android:src="@drawable/dog"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_17"/>

        <TextView
            android:id="@+id/activity_data_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="南瓜先生"
            android:layout_alignTop="@+id/activity_data_icon"
            android:layout_toRightOf="@+id/activity_data_icon"
            android:layout_marginLeft="@dimen/dp_13"
            android:textSize="@dimen/sp_15"
            android:textColor="#333"/>
        <TextView
            android:id="@+id/activity_data_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账号"
            android:layout_alignBottom="@+id/activity_data_icon"
            android:layout_toRightOf="@+id/activity_data_icon"
            android:layout_marginLeft="@dimen/dp_13"
            android:textColor="#333"/>

        <ImageView
            android:layout_width="@dimen/dp_8"
            android:layout_height="@dimen/dp_14"
            android:src="@drawable/man"
            android:layout_alignTop="@+id/activity_data_icon"
            android:layout_toRightOf="@id/activity_data_name"
            android:layout_marginLeft="@dimen/dp_5"

            />

        <ImageView
            android:id="@+id/acticity_data_care"
            android:layout_width="@dimen/dp_27"
            android:layout_height="@dimen/dp_23"
            android:src="@drawable/love"
            android:layout_marginTop="@dimen/dp_25"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_35"/>

        <TextView
            android:layout_width="@dimen/dp_27"
            android:layout_height="wrap_content"
            android:text="已关注"
            android:layout_below="@+id/acticity_data_care"
            android:layout_alignLeft="@id/acticity_data_care"
            android:textSize="@dimen/sp_9"
            android:layout_marginTop="@dimen/dp_2"
            android:textColor="#333"
            />

        <ImageView
            android:id="@+id/activity_data_vip"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:src="@drawable/vip"
            android:layout_alignLeft="@id/activity_data_icon"
            android:layout_below="@+id/activity_data_icon"
            android:layout_marginTop="@dimen/dp_26"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="普通用户"
            android:layout_alignTop="@id/activity_data_vip"
            android:layout_toRightOf="@id/activity_data_vip"
            android:layout_marginLeft="@dimen/dp_12"
            android:textSize="@dimen/sp_12"/>

        <ImageView
            android:id="@+id/activity_data_phone"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:src="@drawable/phone"
            android:layout_alignLeft="@id/activity_data_icon"
            android:layout_below="@+id/activity_data_vip"
            android:layout_marginTop="@dimen/dp_15"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13454782575"
            android:layout_alignTop="@id/activity_data_phone"
            android:layout_toRightOf="@id/activity_data_vip"
            android:layout_marginLeft="@dimen/dp_12"
            android:textSize="@dimen/sp_12"/>

        <ImageView
            android:id="@+id/activity_data_qian"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:src="@drawable/answer"
            android:layout_alignLeft="@id/activity_data_icon"
            android:layout_below="@+id/activity_data_phone"
            android:layout_marginTop="@dimen/dp_15"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="有多少能熬过年少轻狂，知道地老天荒"
            android:layout_alignTop="@id/activity_data_qian"
            android:layout_toRightOf="@id/activity_data_vip"
            android:layout_marginLeft="@dimen/dp_12"
            android:textSize="@dimen/sp_12"/>

        <View
            android:id="@+id/activity_data_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginLeft="@dimen/dp_11"
            android:layout_marginRight="@dimen/dp_11"
            android:background="#F4F4F4"
            android:layout_below="@id/activity_data_qian"
            android:layout_marginTop="@dimen/dp_18"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_11"
            android:layout_marginRight="@dimen/dp_11"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_13"
            android:layout_below="@+id/activity_data_view"
            android:gravity="center"
            >
            <LinearLayout
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="234"
                    android:textSize="@dimen/sp_16"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="动态"
                    android:layout_marginTop="@dimen/dp_2"
                    android:textSize="@dimen/sp_13"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="234"
                    android:textSize="@dimen/sp_16"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="关注"
                    android:layout_marginTop="@dimen/dp_2"
                    android:textSize="@dimen/sp_13"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="234"
                    android:textSize="@dimen/sp_16"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="被关注"
                    android:layout_marginTop="@dimen/dp_2"
                    android:textSize="@dimen/sp_13"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="234"
                    android:textSize="@dimen/sp_16"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="动态"
                    android:layout_marginTop="@dimen/dp_2"
                    android:textSize="@dimen/sp_13"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_10"
        android:background="#fff"
        android:layout_below="@+id/activity_data_re2">

        <TextView
            android:id="@+id/activity_data_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_15"
            android:text="相关信息"
            android:textSize="@dimen/sp_15"/>

    </RelativeLayout>

</RelativeLayout>