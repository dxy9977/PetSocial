<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SelectActivity">

    <RelativeLayout
        android:id="@+id/activity_select_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_75"
        android:background="#4b86fb"
        android:paddingTop="@dimen/dp_25">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_50"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="兴趣选择"
            android:textColor="#fff"
            android:textSize="@dimen/sp_17" />
    </RelativeLayout>

    <TextView
        android:id="@+id/activity_select_title1"
        android:layout_below="@+id/activity_select_title"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="准确选择兴趣可以帮助你更快找到志同道合的宠友哦"
        android:textSize="@dimen/sp_13"
        android:layout_centerHorizontal="true"

        />

    <RelativeLayout
        android:id="@+id/activity_select_imageL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_below="@+id/activity_select_title1"
        android:layout_centerHorizontal="true"
        >

        <RelativeLayout
            android:id="@+id/dog_re"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_50"
            >

            <ImageView
                android:id="@+id/activity_select_image1"
                android:layout_width="88dp"
                android:layout_height="88dp"
                android:layout_gravity="center"

                android:clickable="true"
                android:onClick="btnEnter"
                android:src="@drawable/dog"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="汪~"
                android:layout_marginTop="10dp"
                android:layout_centerInParent="true"
                android:layout_below="@id/activity_select_image1"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/cat_re"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_toRightOf="@id/dog_re">

            <ImageView
                android:id="@+id/activity_select_image2"
                android:layout_width="88dp"
                android:layout_height="88dp"
                android:layout_gravity="center"
                android:src="@drawable/cat"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="喵~"
                android:layout_marginTop="10dp"
                android:layout_centerInParent="true"
                android:layout_below="@id/activity_select_image2"/>
        </RelativeLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/activity_select_but1"
        android:layout_below="@+id/activity_select_imageL"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="全部都爱"
        android:textSize="@dimen/sp_13"
        android:layout_centerHorizontal="true"
        android:background="#11000000"

        />

    <Button
        android:id="@+id/activity_select_but2"
        android:layout_below="@+id/activity_select_but1"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="选好了马上进入"
        android:textSize="@dimen/sp_13"
        android:layout_centerHorizontal="true"

        android:background="#11000000"
        />

</RelativeLayout>