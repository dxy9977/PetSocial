<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff2f2f2"
    tools:context=".fragment.FirstFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200"
        android:background="#FFD946">
        <TextView
            android:id="@+id/fragment_first_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关注"
            android:layout_marginTop="@dimen/dp_33"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/sp_16"
            android:textColor="#333333"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/fragment_first_lunbo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_174"
        android:layout_marginTop="@dimen/dp_66"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:src="@drawable/dog"
        android:background="#fab"/>

    <LinearLayout
        android:id="@+id/fragment_first_lin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_154"
        android:layout_below="@+id/fragment_first_lunbo"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:orientation="vertical"
        android:background="#fff"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/dp_22"
                android:layout_height="@dimen/dp_20"
                android:src="@drawable/laba"
                android:layout_marginTop="@dimen/dp_17"
                android:layout_marginLeft="@dimen/dp_12"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="显示一些消息显示一些消息通知"
                android:layout_marginTop="@dimen/dp_18"
                android:layout_marginLeft="@dimen/dp_15"
                android:textColor="#333333"
                android:textSize="@dimen/sp_13"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginLeft="@dimen/dp_12"
            android:background="#F4F4F4"
            android:layout_marginTop="@dimen/dp_16"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                >

                <ImageView
                    android:id="@+id/fragment_first_img1"
                    android:layout_width="@dimen/dp_45"
                    android:layout_height="@dimen/dp_45"
                    android:background="#fff"
                    android:src="@drawable/dog"
                    android:layout_marginTop="@dimen/dp_15"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="类别1"
                    android:textSize="@dimen/dp_12"
                    android:layout_below="@id/fragment_first_img1"
                    android:layout_marginTop="@dimen/dp_5"
                    />

            </LinearLayout>



            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    >

                </RelativeLayout>

                <ImageView
                    android:id="@+id/fragment_first_img2"
                    android:layout_width="@dimen/dp_45"
                    android:layout_height="@dimen/dp_45"
                    android:background="#fff"
                    android:src="@drawable/cat"
                    android:layout_marginTop="@dimen/dp_15"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="类别2"
                    android:textSize="@dimen/dp_12"
                    android:layout_below="@id/fragment_first_img1"
                    android:layout_marginTop="@dimen/dp_5"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                >

                <ImageView
                    android:id="@+id/fragment_first_img3"
                    android:layout_width="@dimen/dp_45"
                    android:layout_height="@dimen/dp_45"
                    android:background="#fff"
                    android:src="@drawable/dog"
                    android:layout_marginTop="@dimen/dp_15"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="类别3"
                    android:textSize="@dimen/dp_12"
                    android:layout_below="@id/fragment_first_img1"
                    android:layout_marginTop="@dimen/dp_5"
                    />

            </LinearLayout>



            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                >

                <ImageView
                    android:id="@+id/fragment_first_img4"
                    android:layout_width="@dimen/dp_45"
                    android:layout_height="@dimen/dp_45"
                    android:background="#fff"
                    android:src="@drawable/cat"
                    android:layout_marginTop="@dimen/dp_15"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="类别4"
                    android:textSize="@dimen/dp_12"
                    android:layout_below="@id/fragment_first_img1"
                    android:layout_marginTop="@dimen/dp_5"
                    />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_height="match_parent"
        android:background="#fff"
        android:layout_below="@+id/fragment_first_lin"
        android:layout_marginTop="@dimen/dp_14">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="最新信息"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_12"
            android:textSize="@dimen/sp_15"
            android:textColor="#333333"/>

        <TextView
            android:id="@+id/fragment_first_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="换一批"
            android:textColor="#333"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginRight="13dp"
            android:textSize="@dimen/sp_13"/>


    </RelativeLayout>
</RelativeLayout>