<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    android:paddingStart="@dimen/dp_28"
    android:paddingEnd="@dimen/dp_28"
    tools:context=".login.PhoneActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_100"
        android:lineSpacingExtra="@dimen/dp_8"
        android:text="您好,\n欢迎使用宠物社交"
        android:textColor="#000"
        android:textSize="@dimen/sp_22"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_weight="1"
        android:orientation="vertical">

        <EditText
            android:id="@+id/phone_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_69"
            android:background="@null"
            android:hint="请输入手机号"
            android:inputType="number"
            android:singleLine="true"
            android:textSize="@dimen/sp_15" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:background="#cccccc" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_69"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/phone_code"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入验证码"
                android:inputType="number"
                android:singleLine="true"
                android:textSize="@dimen/sp_15" />

            <Button
                android:id="@+id/phone_code_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="获取验证码"
                android:textSize="@dimen/sp_12"
                android:textColor="#333"
                android:background="@drawable/login_btn_bg"
                />
        </LinearLayout>



        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:background="#cccccc" />


        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_marginTop="@dimen/dp_73"
            android:background="@drawable/login_btn_bg"
            android:onClick="btnLogin"
            android:text="登陆"
            android:textColor="#C3C3C3"
            android:textSize="@dimen/sp_15" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16">
            <TextView
                android:id="@+id/activity_phone_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="btnBack"
                android:text="已有账号，去登陆"
                android:textColor="#BABABA"
                android:textSize="@dimen/sp_12" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="注册"
                android:layout_alignParentRight="true"
                android:textColor="#BABABA"
                />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>