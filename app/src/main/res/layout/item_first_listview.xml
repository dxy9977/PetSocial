<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/et_re"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dp_5">

    <ImageView
        android:id="@+id/item_first_icon"
        android:layout_width="@dimen/dp_43"
        android:layout_height="@dimen/dp_43"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_marginTop="@dimen/dp_17"
        android:src="@drawable/my_icon" />

    <TextView
        android:id="@+id/item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/item_first_icon"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_toRightOf="@id/item_first_icon"
        android:text="用户昵称"
        android:textColor="#333"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:id="@+id/item_first_tvzan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/item_first_icon"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_toRightOf="@id/item_first_icon"
        android:text="点赞量:123"
        android:textColor="#999"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/item_first_icon"
        android:layout_marginLeft="@dimen/dp_22"
        android:layout_toRightOf="@id/item_first_tvzan"
        android:text="距离:1km"
        android:textColor="#333"
        android:textSize="@dimen/sp_13"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/item_type"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_24"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_12"
        android:background="@drawable/tv_bg"
        android:gravity="center"
        android:paddingStart="@dimen/dp_12"
        android:paddingEnd="@dimen/dp_4"
        android:text="狗狗"
        android:textColor="#fff"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:id="@+id/item_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_first_icon"
        android:layout_marginStart="@dimen/dp_13"
        android:layout_marginTop="@dimen/dp_10"
        android:paddingEnd="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:text="4444444"
        android:textColor="#333"
        android:textSize="@dimen/sp_14" />

    <LinearLayout
        android:id="@+id/liner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_content"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_marginRight="@dimen/dp_11"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/item_img1"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_80"
            android:layout_weight="1"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/item_img2"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_80"
            android:layout_marginStart="@dimen/dp_9"
            android:layout_weight="1"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/item_img3"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_80"
            android:layout_marginStart="@dimen/dp_9"
            android:layout_weight="1"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/item_img4"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_80"
            android:layout_marginStart="@dimen/dp_9"
            android:layout_weight="1"
            android:scaleType="centerCrop" />
    </LinearLayout>


</RelativeLayout>