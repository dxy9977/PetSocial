<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="@dimen/dp_168">

    <View
        android:id="@+id/item_first_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#F2F2F2"
        android:layout_marginTop="@dimen/dp_11"
        android:layout_marginLeft="@dimen/dp_14"/>

    <ImageView
        android:layout_width="@dimen/dp_43"
        android:layout_height="@dimen/dp_43"
        android:id="@+id/item_first_icon"
        android:layout_below="@+id/item_first_view"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_marginTop="@dimen/dp_17"
        android:src="@drawable/dog"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户昵称"
        android:textColor="#333"
        android:textSize="@dimen/sp_13"
        android:layout_alignTop="@id/item_first_icon"
        android:layout_toRightOf="@id/item_first_icon"
        android:layout_marginLeft="@dimen/dp_2"/>

    <TextView
        android:id="@+id/item_first_tvzan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="点赞量： 123"
        android:textColor="#333"
        android:textSize="@dimen/sp_13"
        android:layout_alignBottom="@id/item_first_icon"
        android:layout_toRightOf="@id/item_first_icon"
        android:layout_marginLeft="@dimen/dp_2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="距离 ：123km"
        android:textColor="#333"
        android:textSize="@dimen/sp_13"
        android:layout_alignBottom="@id/item_first_icon"
        android:layout_toRightOf="@id/item_first_tvzan"
        android:layout_marginLeft="@dimen/dp_22"/>

    <TextView
        android:layout_width="@dimen/dp_64"
        android:layout_height="@dimen/dp_24"
        android:background="@drawable/tv_bg"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/item_first_view"
        android:text="狗狗"
        android:gravity="center"
        android:textSize="@dimen/sp_13"
        android:layout_marginTop="@dimen/dp_12"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:layout_below="@id/item_first_icon"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_marginRight="@dimen/dp_11"
        android:layout_marginTop="@dimen/dp_20"
        android:background="#fab"
        />




</RelativeLayout>