<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/et_re"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_message_icon"
        android:layout_width="@dimen/dp_43"
        android:layout_height="@dimen/dp_43"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_marginTop="@dimen/dp_17"
        android:src="@drawable/my_icon" />

    <TextView
        android:id="@+id/item_message_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/item_message_icon"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_2"
        android:layout_toRightOf="@id/item_message_icon"
        android:text=""
        android:textColor="#333"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:id="@+id/item_message_tvzan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/item_message_icon"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_2"
        android:layout_toRightOf="@id/item_message_icon"
        android:text="点赞量:123"
        android:textColor="#333"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/item_message_icon"
        android:layout_marginLeft="@dimen/dp_22"
        android:layout_toRightOf="@id/item_message_tvzan"
        android:text="距离:1km"
        android:textColor="#333"
        android:textSize="@dimen/sp_13"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/message_type"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_24"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_12"
        android:background="@drawable/tv_bg"
        android:gravity="center"
        android:paddingStart="@dimen/dp_12"
        android:paddingEnd="@dimen/dp_4"
        android:text="狗狗"
        android:textColor="#fff"
        android:textSize="@dimen/sp_13" />

    <View
        android:id="@+id/item_message_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@+id/item_message_icon"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_16"
        android:background="#F4F4F4" />

    <TextView
        android:id="@+id/item_message_tvContext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_message_view"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_17"
        android:layout_marginRight="@dimen/dp_15"
        android:ellipsize="end"
        android:maxLines="3"
        android:text="111" />

    <LinearLayout
        android:id="@+id/item_message_lin1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:layout_below="@id/item_message_tvContext"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_17"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/message_img1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/message_img2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_9"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/message_img3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_9"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/message_img4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_9"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_message_lin2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_message_lin1"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="invisible">

        <ImageView
            android:layout_width="@dimen/dp_12"
            android:layout_height="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_15"
            android:src="@drawable/addr" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_9"
            android:layout_weight="1"
            android:text="宁波市鄞州区"
            android:textColor="#999"
            android:textSize="@dimen/sp_11" />

        <ImageView
            android:layout_width="@dimen/dp_19"
            android:layout_height="@dimen/dp_5"
            android:layout_marginRight="18dp"
            android:src="@drawable/more" />


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/item_message_re"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_message_lin2"
        android:layout_marginTop="@dimen/dp_15">

        <LinearLayout
            android:id="@+id/iamgeview_lin"
            android:layout_width="@dimen/dp_67"
            android:layout_height="@dimen/dp_26"
            android:layout_marginLeft="@dimen/dp_15"
            android:background="#fab"
            android:orientation="horizontal"
            android:visibility="gone" />

        <TextView
            android:id="@+id/item_message_zan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_13"
            android:layout_toRightOf="@id/iamgeview_lin"
            android:text="4人赞"
            android:textSize="@dimen/sp_11" />

        <TextView
            android:id="@+id/item_message_liulang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_17"
            android:text="浏览人数: 1234"
            android:textSize="@dimen/sp_11"
            android:visibility="invisible" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:layout_below="@+id/item_message_re"
        android:layout_marginTop="@dimen/dp_17"
        android:background="#fff6f6f6" />
</RelativeLayout>