<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    android:paddingStart="@dimen/dp_28"
    android:paddingEnd="@dimen/dp_28"
    tools:context=".login.RegisterActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_100"
        android:lineSpacingExtra="@dimen/dp_8"
        android:text="您好,\n欢迎使用宠物社交"
        android:textColor="#000"
        android:textSize="@dimen/sp_28"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_49"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="手机号"
                android:textColor="#333"
                android:textSize="@dimen/sp_15" />

            <EditText
                android:id="@+id/register_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_20"
                android:background="@null"
                android:hint="请输入手机号"
                android:inputType="number"
                android:singleLine="true"
                android:textColorHint="#E8E8E8"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/sp_15" />
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:background="#f4f4f4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_49"
            android:layout_marginTop="@dimen/dp_20"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="密    码"
                android:textColor="#333"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/sp_15" />

            <EditText
                android:id="@+id/register_newpsd"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请设置初始密码"
                android:inputType="textVisiblePassword"
                android:singleLine="true"
                android:textColorHint="#E8E8E8"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/sp_15" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:background="#F4F4F4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_49"
            android:layout_marginTop="@dimen/dp_20"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="验证码"
                android:textColor="#333"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/sp_15" />

            <EditText
                android:id="@+id/register_code"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入验证码"
                android:inputType="number"
                android:singleLine="true"
                android:textColorHint="#E8E8E8"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/sp_15" />

            <Button
                android:id="@+id/register_getcode"
                android:layout_width="@dimen/dp_91"
                android:layout_height="@dimen/dp_30"
                android:background="@drawable/login_code_bg"
                android:clickable="true"
                android:gravity="center"
                android:text="获取验证码"
                android:textColor="#333333"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:background="#F4F4F4" />


        <CheckBox
            android:id="@+id/register_cb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="勾选此项代表您同意我们的《用户协议》"
            android:textColor="#C3C3C3"
            android:textSize="@dimen/sp_12" />


        <Button
            android:id="@+id/register_submit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_marginTop="@dimen/dp_37"
            android:background="@drawable/login_btn_bg"
            android:enabled="false"
            android:text="注册"
            android:textColor="#C3C3C3"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:onClick="btnBack"
            android:padding="@dimen/dp_5"
            android:text="已有账号，去登陆"
            android:textColor="#BABABA"
            android:textSize="@dimen/sp_12" />
    </LinearLayout>


</LinearLayout>